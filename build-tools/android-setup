export NDK_HOME=/home/palisade/Android/Sdk/ndk-bundle
export TOOLCHAIN=$NDK_HOME/toolchains/llvm/prebuilt/linux-x86_64/bin
export APP_PLATFORM=android-26
export PATH=$NDK_HOME:$TOOLCHAIN:$PATH

target_host=i686-linux-android
export AR=${target_host}-ar
export RANLIB=${target_host}-ranlib
export AS=${target_host}26-clang
export CC=${target_host}26-clang
export CXX=${target_host}26-clang++
export LD=${target_host}-ld
export STRIP=${target_host}-strip

# Tell configure what flags Android requires.
export CFLAGS="-march=i686 -mtune=intel -mssse3 -mfpmath=sse -m32 -fPIE -fPIC"
export LDFLAGS="-pie"
