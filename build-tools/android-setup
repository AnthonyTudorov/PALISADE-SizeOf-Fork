export APP_PLATFORM=android-28
export PATH=$PATH:$NDK_HOME

export PATH=/home/palisade/share-toolchain-x86_64/bin:$PATH

target_host=x86_64-linux-android
export AR=$target_host-ar
export AS=$target_host-clang
